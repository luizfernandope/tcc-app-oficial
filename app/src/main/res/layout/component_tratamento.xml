<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_horizontalGap="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card1_tratamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="50"
            app:cardCornerRadius="12dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/borda_black"
                >
                <TextView
                    android:id="@+id/titulo1_tratamento"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:text="Implante"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginVertical="5dp"/>

                <TextView
                    android:id="@+id/descricao1_tratamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="descricao"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="10dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    app:dividerColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tipo1_tratamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="implante"
                    android:background="@drawable/borda_black"
                    android:backgroundTint="@color/azul_fraco"
                    android:textColor="@color/azul"
                    android:paddingHorizontal="8dp"
                    />

                <TextView
                    android:id="@+id/marcarConsulta1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="marcar consulta"
                    android:maxLines="1"
                    android:background="@drawable/borda_top_left"
                    android:backgroundTint="@color/azul"
                    android:paddingHorizontal="3dp"
                    android:layout_marginHorizontal="1.5dp"
                    android:layout_marginBottom="1.5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2_tratamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="50"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/borda_black"
                >
                <TextView
                    android:id="@+id/titulo2_tratamento"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="5dp"
                    android:text="Implante"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginVertical="5dp"/>

                <TextView
                    android:id="@+id/descricao2_tratamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="descricao"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="10dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    />
                <TextView
                    android:id="@+id/tipo2_tratamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="implante"
                    android:background="@drawable/borda_black"
                    android:backgroundTint="@color/azul_fraco"
                    android:textColor="@color/azul"
                    android:paddingHorizontal="8dp"
                    />

                <TextView
                    android:id="@+id/marcarConsulta2"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="marcar consulta"
                    android:maxLines="1"
                    android:background="@drawable/borda_top_left"
                    android:backgroundTint="@color/azul"
                    android:paddingHorizontal="3dp"
                    android:layout_marginHorizontal="1.5dp"
                    android:layout_marginBottom="1.5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>