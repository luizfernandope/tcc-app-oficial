<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SobreTratamentoActivity"
    android:background="@color/bg_main_pages">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:onClick="voltarSobreTratamento"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ola"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:gravity="end"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="implante dentario"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sobre o serviço"
                android:textColor="@color/white"
                android:textSize="18dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescricaoTratamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/horario"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duração"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvDuracaoTratamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30:00 minutos"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tvSessoesTratamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 sessão"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tratamento"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvTipoTratamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30:00 minutos"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por que fazer ?"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tvPqFazerTratamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/horario"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvValorTratamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 100,00"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="até 6x no cartão"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="50"
                android:background="@drawable/borda_black"
                android:text="Ir para inicio"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Marcar na agenda"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/borda_black_fill_blue"
                android:onClick="irParaAgendamento"/>
        </LinearLayout>

        </LinearLayout>



</ScrollView>