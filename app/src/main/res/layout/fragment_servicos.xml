<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ServicosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicos"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/ic_interrogacao"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.SearchView
                android:id="@+id/barraPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/bg_curvo12"
                app:searchIcon="@drawable/ic_lupa"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/layoutFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:backgroundTint="@color/azul"
                        android:paddingHorizontal="6dp"
                        android:text="Todos"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="ortodontia"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="endodontia"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="peridontia"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="clínica geral"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="implantes"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="clareamento"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="lentes"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_curvo12"
                        android:paddingHorizontal="6dp"
                        android:text="facetas"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdicionarServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curvo12"
                android:layout_marginTop="15dp"
                android:text="addicionar novo serviço"
                android:textColor="@color/black"
                android:layout_marginHorizontal="40dp"
                android:drawableStart="@drawable/ic_plus_square"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:textAlignment="textStart"
                android:visibility="gone"/>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_Tratamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"/>

    </LinearLayout>



</ScrollView>